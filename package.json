{
  "name": "electron-cards-app",
  "productName":"CardsApp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron-build": "npm run build && electron-builder",
    "serve": "vite preview",
    "electron": "electron electron/main.js",
    "electron-watch": "nodemon --exec electron electron/main.js",
